package com.softserve.edu.rest;

import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import com.softserve.edu.entity.Group;
import com.softserve.edu.entity.User;
import com.softserve.edu.manager.GroupManagerImplementation;

@Path("/findGroup")
public class GroupRest {
	@GET
	@Produces(MediaType.APPLICATION_XML)
	@Path("/findGroupOpenedByCompetence/{competenceId}")
	public Response findOpenedGroupByCompetence(
			@PathParam("competenceId") final long competenceId) {
		List<Group> listOpenedGroupsByCompetence = null;
		listOpenedGroupsByCompetence = new GroupManagerImplementation().findByCompetence(
				competenceId, true);
		JaxbList<Group> jaxbList = new JaxbList<Group>();
		jaxbList.setList(listOpenedGroupsByCompetence);
		return Response.ok(jaxbList).build();
	}

	@GET
	@Produces(MediaType.APPLICATION_XML)
	@Path("/findUsersByGroupId/{groupId}")
	public Response findUsersByGroupId(@PathParam("groupId") final long groupId) {
		List<User> listUsersInGroup = null;
		listUsersInGroup = new GroupManagerImplementation().users(groupId);
		JaxbList<User> jaxbList = new JaxbList<User>();
		jaxbList.setList(listUsersInGroup);
		return Response.ok(jaxbList).build();
	}

	@GET
	@Produces(MediaType.APPLICATION_XML)
	@Path("/findGroupsInFuture")
	public Response findGroupsInFuture() {
		List<Group> listGroupsInFuture = null;
		listGroupsInFuture = new GroupManagerImplementation().inFuture();
		JaxbList<Group> jaxbList = new JaxbList<Group>();
		jaxbList.setList(listGroupsInFuture);
		return Response.ok(jaxbList).build();

	}

}
