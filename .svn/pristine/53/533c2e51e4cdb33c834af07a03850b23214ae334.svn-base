<%@ include file="../libs/libs.jsp" %>
<c:if test="${not empty waiting_attend}">
    Очікується підтвердження:
    <c:forEach var="item" items="${waiting_attend}">
       ${item.name}
    </c:forEach>
    </c:if>

    <c:choose>
        <c:when test="${not empty competences}">
            <form method="GET">
                Подати заявку на спеціальність: <select name="competence">
                    <c:forEach var="item" items="${competences}">
                        <option value="${item.id}">${item.name}</option>
                    </c:forEach>
                </select>

                <button type="submit">Податись</button>
            </form>
        </c:when>

        <c:otherwise>
    Немає доступних для вибору напрямків.
    </c:otherwise>
    </c:choose>