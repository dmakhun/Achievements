package com.softserve.edu.rest;

import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import com.softserve.edu.entity.AchievementType;
import com.softserve.edu.manager.AchievementTypeManagerImplementation;

@Path("/achievement_type")
public class AchievementTypeRest {
	private AchievementTypeManagerImplementation manager = new AchievementTypeManagerImplementation();

	/**
	 * This method returns all existing achievement types
	 * http://localhost:8080/Achievements/rest/achievement_type/find/achievement_types/all
	 * 
	 * @return xml representation of all achievement types
	 */
	@Path("/find/achievement_types/all")
	@GET
	@Produces(MediaType.APPLICATION_XML)
	public Response findAllAChievementTypes() {
		List<AchievementType> achievementTypes = manager.achievementTypeList();
		return Response.ok(new JaxbList<AchievementType>(achievementTypes))
				.build();

	}

}
