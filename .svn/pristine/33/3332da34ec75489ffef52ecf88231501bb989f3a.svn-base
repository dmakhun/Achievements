<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="../menu.jsp"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link href="resources/css/login.css" rel="stylesheet" type="text/css" />
<title>Login page</title>
</head>
<body onload='document.f.j_username.focus();'>
	<div class="container">
		<section id="content"> <c:if test="${not empty error}">
			<div style="color: red;" >
				Your login attempt was not successful, try again.<br /> Caused :
				${sessionScope["SPRING_SECURITY_LAST_EXCEPTION"].message}
			</div>
		</c:if>
		<form method="post" action="<c:url value='/j_spring_security_check'/>">
			<h1>Sign In</h1>
			<div>
				<input type="text" name="j_username" id="username" size="20"/>
			</div>
			<div>
				<input type="password" name="j_password" id="password" size="20"/>
			</div>
			
			<div>
			<h4>Remember me<input type='checkbox' name='_spring_security_remember_me' checked="checked"/></td>
			</h4></div>
			
			<div>
				<input type="submit" value="Login" />
			</div>
		</form>
		<a href="registration">Register</a>     
		<a href="https://www.google.com/accounts/recovery">Lost your password?</a> 
		</section>
		
	</div>
</body>
</html>