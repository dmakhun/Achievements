package com.softserve.edu.dao;

import java.util.List;

import com.softserve.edu.entity.Achievement;

public interface AchievementDao extends GenericDao<Achievement> {

	/**
	 * Find achievements by achievement type and user id.
	 * 
	 * @param achTid
	 * @param uId
	 * @return
	 */
	public List<Achievement> findByAchievementTypeAndUser(final long achTid,
			final long uId);

	/**
	 * List of all achievements of current user.
	 * 
	 * @param userId
	 * @return list of users
	 */
	public List<Achievement> userAchievements(Long userId);

	public List<Achievement> getAchievementsByUserUuid(String userUuiId);
}
