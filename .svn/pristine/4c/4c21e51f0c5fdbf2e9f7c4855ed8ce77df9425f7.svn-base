package com.softserve.edu.rest;

import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.ws.rs.core.Response;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.softserve.edu.entity.Group;
import com.softserve.edu.entity.User;
import com.softserve.edu.manager.GroupManager;

@Component
@Path("/group")
public class GroupRest {
	@Autowired
	GroupManager groupManager;
	
	
	//UUID
	@GET
	@Produces(MediaType.APPLICATION_XML)
	@Path("/findGroupOpenedByCompetence/{competenceUuid}")
	public Response findOpenedGroupByCompetenceUuid(
			@PathParam("competenceUuid") final String competenceUuid) {
		List<Group> listOpenedGroupsByCompetence = groupManager.findByCompetenceUuid(
				competenceUuid, true);
		JaxbList<Group> jaxbList = new JaxbList<Group>(listOpenedGroupsByCompetence);
		return Response.ok(jaxbList).build();
	}

