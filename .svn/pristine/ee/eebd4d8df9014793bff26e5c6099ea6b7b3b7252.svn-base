<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ include file="../menu.jsp"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<link rel="stylesheet"
	href="<c:url value="/resources/css/addAchiv.css" />" type="text/css" />
<title>Managers</title>
</head>
<body>
<br>
	<c:if test="${status == 'success'}">
		<div class="alert alert-success"><strong>Success!</strong> Manager removed!</div>
			</c:if>
	<div class="container">
		<div class="panel panel-default">
			<div class="panel-heading">Managers</div>
			<table class="table">
			<tr>
				<th>Name</th>
				<th>Surname</th>
				<th>Username</th>
				<th>Email</th>
			</tr>
				<c:forEach var="user" items="${userlist}">
					<tr>
						<td>${user.name}</td>
						<td>${user.surname}</td>
						<td>${user.username }</td>
						<td>${user.email }</td>
						<td><button class="btn btn-default"
								onclick="location.href='<c:url value="/admin/removeManager/${user.id}"/>'">Remove
								manager</button></td>

					</tr>
				</c:forEach>				
			</table>
		</div>		
		<div class="panel panel-default">
		<div class="panel-body">
		<a href="<c:url value="/admin/addManager"/>">Add mananger</a>
		</div>
	</div>
	</div>

	
	
</body>
</html>